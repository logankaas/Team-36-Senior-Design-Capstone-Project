<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeniorCapstoneProject.LandingPage"
             Title="Home">

    <Grid RowDefinitions="Auto,*,Auto,Auto" ColumnDefinitions="*">
        <!-- Header -->
        <Grid Grid.Row="0" Padding="24,24,24,0" ColumnDefinitions="*,Auto">
            <Label Text="Your Health"
                   FontSize="32"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   TextColor="Black"/>
            <Border
                WidthRequest="32"
                HeightRequest="32"
                StrokeThickness="0"
                Background="#2E91FF"
                StrokeShape="RoundRectangle 16"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Margin="0,0,0,0"
                Grid.Column="1">
                <Label
                    x:Name="ProfileInitial"
                    Text="A"
                    FontSize="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnProfileClicked"/>
                </Border.GestureRecognizers>
            </Border>
        </Grid>

        <!-- 2x2 Feature Grid -->
        <Grid Grid.Row="1" Padding="5,20,5,0" RowSpacing="16" ColumnSpacing="1" RowDefinitions="Auto,Auto" ColumnDefinitions="*,*">
            <!-- Doctors -->
            <Border Background="#2E91FF" StrokeShape="RoundRectangle 8" Grid.Row="0" Grid.Column="0" HeightRequest="200" WidthRequest="200">
                <Grid>
                    <Label Text="Chat"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"
                           Margin="12,10,0,0"/>
                    <Image Source="doctor.png"
                           HeightRequest="100"
                           WidthRequest="100"
                           HorizontalOptions="End"
                           VerticalOptions="End"
                           Margin="0,0,10,10"/>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnChatClicked"/>
                    </Grid.GestureRecognizers>
                </Grid>
            </Border>
            <!-- Medicine -->
            <Border Background="#2E91FF" StrokeShape="RoundRectangle 8" Grid.Row="0" Grid.Column="1" HeightRequest="200" WidthRequest="200">
                <Grid>
                    <Label Text="Medicine"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"
                           Margin="12,10,0,0"/>
                    <Image Source="medicine.png"
                           HeightRequest="100"
                           WidthRequest="100"
                           HorizontalOptions="End"
                           VerticalOptions="End"
                           Margin="0,0,10,10"/>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMedicationsClicked"/>
                    </Grid.GestureRecognizers>
                </Grid>
            </Border>
            <!-- Tests -->
            <Border Background="#2E91FF" StrokeShape="RoundRectangle 8" Grid.Row="1" Grid.Column="0" HeightRequest="200" WidthRequest="200">
                <Grid>
                    <Label Text="Tests"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"
                           Margin="12,10,0,0"/>
                    <Image Source="sample_tube.png"
                           HeightRequest="100"
                           WidthRequest="100"
                           HorizontalOptions="End"
                           VerticalOptions="End"
                           Margin="0,0,10,10"/>
                </Grid>
            </Border>
            <!-- Prescriptions -->
            <Border Background="#2E91FF" StrokeShape="RoundRectangle 8" Grid.Row="1" Grid.Column="1" HeightRequest="200" WidthRequest="200">
                <Grid>
                    <Label Text="Prescriptions"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"
                           Margin="12,10,0,0"/>
                    <Image Source="prescription.png"
                           HeightRequest="100"
                           WidthRequest="100"
                           HorizontalOptions="End"
                           VerticalOptions="End"
                           Margin="0,0,10,10"/>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMedicationsClicked"/>
                    </Grid.GestureRecognizers>
                </Grid>
            </Border>
        </Grid>

        <!-- Appointments List (Dynamic from DB) -->
        <VerticalStackLayout Grid.Row="2" Padding="24,24,24,0" Spacing="10">
            <Label Text="Upcoming Appointments" FontSize="20" FontAttributes="Bold" TextColor="#22223B" Margin="0,0,0,8"/>
            <CollectionView ItemsSource="{Binding Appointments}" Margin="0,0,0,12">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="4,Auto,*,Auto" RowDefinitions="Auto">
                            <BoxView Color="#2E91FF" WidthRequest="4" HeightRequest="48" VerticalOptions="Start" CornerRadius="2"/>
                            <VerticalStackLayout Grid.Column="1" Spacing="0" Padding="8,0,0,0">
                                <Label Text="{Binding Date, StringFormat='{}{0:dd}'}" FontSize="16" FontAttributes="Bold" TextColor="Black"/>
                                <Label Text="{Binding Date, StringFormat='{}{0:MMM}'.ToUpper()}" FontSize="10" TextColor="#A0A0A0"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="2" Spacing="0">
                                <Label Text="{Binding DoctorName}" FontSize="16" TextColor="Black"/>
                                <Label Text="{Binding TimeRange}" FontSize="12" TextColor="#A0A0A0"/>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

        <!-- Bottom Navigation Bar -->
        <Grid Grid.Row="3" Padding="0,24,0,0" HeightRequest="64" BackgroundColor="White"
              ColumnDefinitions="*,*,*,*">
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="emergency_call.png" HeightRequest="24" WidthRequest="24">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCalendarTapped"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="Calendar" FontSize="10" TextColor="#A0A0A0"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="your_health.png" HeightRequest="24" WidthRequest="24"/>
                <Label Text="Your Health" FontSize="10" TextColor="#2E91FF"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="sources.png" HeightRequest="24" WidthRequest="24"/>
                <Label Text="Sources" FontSize="10" TextColor="#A0A0A0"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="medical_report.png" HeightRequest="24" WidthRequest="24">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMedicalIdTapped"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="Medical ID" FontSize="10" TextColor="#A0A0A0"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>