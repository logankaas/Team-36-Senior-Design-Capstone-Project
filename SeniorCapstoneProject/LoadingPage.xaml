<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeniorCapstoneProject.LoadingPage"
             Title="Loading">

    <Grid>
        <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">
            <ActivityIndicator IsRunning="True" IsVisible="True" WidthRequest="60" HeightRequest="60" Color="#21B8FF"/>
            <Label Text="Loading..." FontSize="20" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>