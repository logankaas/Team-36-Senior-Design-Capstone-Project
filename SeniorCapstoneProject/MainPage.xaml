<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SeniorCapstoneProject.Controls"
             x:Class="SeniorCapstoneProject.MainPage"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25" VerticalOptions="CenterAndExpand">
            <Image Source="mha_hero_logo.png" HeightRequest="120" Aspect="AspectFit" />
            <Label Text="Login" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" />

            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            <Grid>
                <Entry x:Name="PasswordEntry"
                       Placeholder="Password"
                       IsPassword="True"
                       Grid.Column="0" />
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
            </Grid>

            <HorizontalStackLayout>
                <CheckBox x:Name="RememberMeCheckBox" Color="#2E91FF" BackgroundColor="Transparent" />
                <Label Text="Remember login" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <ImageButton x:Name="LoginButton"
                         Source="mha_login_btn.png"
                         Clicked="OnLoginClicked"
                         HorizontalOptions="Center"
                         HeightRequest="30"
                         WidthRequest="150"
                         BorderColor="#2E91FF"
                         CornerRadius="20"
                         BorderWidth="1"
                         Aspect="AspectFit"
                         BackgroundColor="Transparent" />

            <Label x:Name="LoginMessage" Text="" TextColor="Red" IsVisible="False" HorizontalOptions="Center" />

            <ImageButton Source="mha_create_account_btn.png"
                         Clicked="OnCreateAccountClicked"
                         HorizontalOptions="Center"
                         HeightRequest="30"
                         WidthRequest="150"
                         BorderColor="#2E91FF"
                         CornerRadius="20"
                         Padding="10"
                         BorderWidth="1"
                         Aspect="AspectFit"
                         BackgroundColor="Transparent" />

            <ImageButton Source="mha_forgot_psswd_btn.png"
                         Clicked="OnForgotPasswordClicked"
                         HorizontalOptions="Center"
                         HeightRequest="30"
                         WidthRequest="150"
                         BorderColor="#2E91FF"
                         CornerRadius="20"
                         Padding="10"
                         BorderWidth="1"
                         Aspect="AspectFit"
                         BackgroundColor="Transparent" />

            <controls:VersionLabel />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>