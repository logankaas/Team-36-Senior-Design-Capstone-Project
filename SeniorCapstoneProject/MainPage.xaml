<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SeniorCapstoneProject.Controls"
             x:Class="SeniorCapstoneProject.MainPage"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25" VerticalOptions="CenterAndExpand">
            <Image Source="mha_hero_logo.png" HeightRequest="120" Aspect="AspectFit" />
            <Label Text="Login" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" />

            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            <Grid>
                <Entry x:Name="PasswordEntry"
                       Placeholder="Password"
                       IsPassword="True"
                       Grid.Column="0" />
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
            </Grid>

            <HorizontalStackLayout>
                <CheckBox x:Name="RememberMeCheckBox" Color="#2E91FF" BackgroundColor="Transparent" />
                <Label Text="Remember login" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <Button Text="Login" x:Name="LoginButton" Clicked="OnLoginClicked" HorizontalOptions="Fill" Background="#2E91FF" />

            <Label x:Name="LoginMessage" Text="" TextColor="Red" IsVisible="False" HorizontalOptions="Center" />

            <Button Text="Create New Account" Clicked="OnCreateAccountClicked" HorizontalOptions="Center" Background="#2E91FF" />

            <Button Text="Forgot Password?" Clicked="OnForgotPasswordClicked" BackgroundColor="Transparent" TextColor="#2E91FF" />

            <controls:VersionLabel />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>